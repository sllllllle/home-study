.setting-form, .alter-password
{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align:center;
  position: relative;
  margin-top: 1rem;
  
  tr {
    line-height: 3rem;
    
    input#book_img {
      font-size: 1.3rem;
    }
  }
  .image {
    width: 6rem;
    height: 6rem;
  }
}

.buttons {
  margin-top: 2rem;
  
  input[type="submit"] {
    background: #0497D8;
    color: #fff;
    font-weight: bold;
    font-size: 1.4rem;
    margin-right: 1rem;
  }
  
  a {
    background: #fff;
    color: #000;
    font-weight: bold;
    font-size: 1.4rem;
  }
}

