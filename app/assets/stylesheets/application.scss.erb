 @import "bootstrap";

 * {
   boder-sizing: border-box;
   padding: 0;
   margin: 0;
 }
 

 
html {
  font-size: 62.5%;
}

body {
  padding: 0;
  margin: 0;
  font-size: 1.6em;
  width: 100%;
  font-family: 'Helvetica Neue','Helvetica','Arial',sans-serif;
}
header {
  background: #fff;
  height: 9vh;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 9vh;
}

.header-icon {
  font-size: 36px;
  font-weight: bold;
}
.header-menu li
{
  font-size: 20px;
  font-weight: bold;
}

main {
  background-image: url("<%= asset_path('background.jpg') %>");
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 82vh;
  position: relative;
  
  .alert {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
  }
}

.memo {
  position: relative;
  background: #FFF;
  border-left:4px dotted rgba(0,0,0,.1);
  border-right:4px dotted rgba(0,0,0,.1);
  box-shadow: 10px 10px 10px rgba(0,0,0,0.4);
  padding: 1em;
  color: #65513f;
  max-width: 1024px;
  
  .masking-tape {
    position: absolute;
    top: -1em;
    background-image: linear-gradient(-45deg, rgba(227, 155, 140, 0.4) 25%, transparent 25%, transparent 50%, rgba(227, 155, 140, 0.4) 50%, rgba(227, 155, 140, 0.4) 75%, transparent 75%, transparent 100%);
    background-size: 20px 20px;
    border-left: 2px dotted rgba(0, 0, 0, 0.1);
    border-right: 2px dotted rgba(0, 0, 0, 0.1);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    padding: 0.25em 2em;
    color: #65513f;
    transform: rotate(-4deg);
  }
  
  .pagetitle {
    color: #3399FF;
    font-weight: bold;
  }
}

.memo-sm {
  width: 50rem;
  height: 37rem;

  .masking-tape {
    top: -1em;
    left: 38%;
    width: 12rem;
    height: 4rem;
  }
  
  .pagetitle {
    text-align: center;
    font-size: 3rem;
    padding-top: 3rem;
    font-weight: bold;
  }
}
.memo-md {
  width: 50rem;
  height: 65%;

  .masking-tape {
    top: -1em;
    left: 40%;
    width: 11rem;
    height: 4rem;
  }
  
  .pagetitle {
    text-align: center;
    font-size: 3rem;
    padding-top: 3rem;
  }
}

.memo-lg {
  position: relative;
  width: 80rem;
  height: 75%;

  .masking-tape {
    left: 40%;
    width: 13rem;
    height: 4rem;
  }
  
  .pagetitle {
    text-align: left;
    font-size: 3rem;
    padding-top: 3rem;
  }
}

// ---- form ----
.form {
  display: flex;
  justify-content: center;
  
  .input-box {
    padding-top: 3rem;
    position: relative;
    display: flex;
    justify-content: center;
    width: 30rem;
    
    label {
      font-size: 1.3rem;
      position: absolute;
      top: 1.2rem;
      text-align: center;
    }
    
    input {
      line-height: 1.5rem;
    }
  }
  
  .select-box {
    padding-top: 2rem;
    display: flex;
    justify-content: center;
    
    select:first-child {
      margin-right: 4rem;
    }
  }
  
  .check-box {
    position: relative;
    text-align: center;
    
    &:first-child {
      margin-top: 1rem;
    }
  }
  .file-box {
    position: relative;
    padding-top: 4.2rem;
    display: flex;
    justify-content: center;
    
    label {
      font-size: 1.3rem;
      text-align: center;
      position: absolute;
      top: 2rem;
    }
  }
  
  .submit {
    text-align: center;
    padding-top: 2rem;
    
    input[type="submit"] {
      color: #000;
      background: #BBDEFC;
      border: none;
      padding: 8px 20px;
      cursor: pointer;
      border-radius: 20%;
      box-shadow: 3px 3px 5px #666666;
      opacity: 0.9;
      font-weight: bold;
    
      &:hover {
        box-shadow: none;
        opacity: 1;
        box-shadow: 1px 1px 3px #666666;
      }
    }
  }
}

// ---- form ----

// --- profile-image-size ---
.profile-image-lg {
  width: 18rem;
  height: 18rem;
}

.profile-image-md {
  width: 7rem;
  height: 7rem;;
}
// --- profile-image-size ---

// --- scroll ---
.scroll {
  overflow: auto;
  height: 50vh;
}

.scroll::-webkit-scrollbar {
    width: 15px;
}

.scroll::-webkit-scrollbar-track {
  border-radius: 10px;
	background: #f2f2f2;
}

.scroll::-webkit-scrollbar-thumb {
  border-radius: 10px;
	background:#09C9D9;
}
// --- scroll ---
// --- button ---
.btn {
  border: none;
  width: 10rem;
  line-height: 2.4rem;
  cursor: pointer;
  border-radius: 20%;
  box-shadow: 3px 3px 5px #666666;
  opacity: 0.9;
  
  &:hover {
    box-shadow: none;
    opacity: 1;
    box-shadow: 1px 1px 3px #666666;
  }
}

.follow {
  color: #fff;
  background: #42C7C1;
  font-weight: bold;
  text-align: center;
}
.unfollow {
  color: #fff;
  background: #F44747;
  font-weight: bold;
  text-align: center;
}
// --- button ---

// ---- login ----
.introduction
{
  color: #fff;
  font-weight: bold;
  font-size: 4rem;
  margin: 0;
}
.login_egg
{
  width: 38rem;
  height: 48rem;
  background-color: #FFF;
  border-radius: 50%  50%  50%  50%  / 60%   60%   40%  40%;
  box-shadow: 10px 10px 10px rgba(0,0,0,0.4);
  position: relative;
  
  .login-form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    text-align: center;
    flex-direction: column;
    
    h2 {
    font-weight: bold;
    color: #3399FF;
    font-size: 2.4rem;
    margin-bottom: 1rem;
    }
    
    .easy-login {
      margin-top: 1rem;
      color: #000;
      background: #E0E274;
      border: none;
      padding: 8px 20px;
      cursor: pointer;
      border-radius: 20%;
      box-shadow: 3px 3px 5px #666666;
      opacity: 0.9;
      text-decoration: none;
      font-weight: bold;
    
      &:hover {
        box-shadow: none;
        opacity: 1;
        box-shadow: 1px 1px 3px #666666;
      }
    }
  }
}

// ---- login ----

// --- user/show ---
.user-info {
  position: absolute;
  top: 10rem;
  width: 29rem;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  
