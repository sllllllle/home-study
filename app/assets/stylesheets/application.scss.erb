      width: 6rem;
      height: 6rem;
    }
  
    .study-menu {
      margin-left: 4rem;
    
      a {
        background: #0289D6;
        color: #fff;
        font-weight: bold;
        font-size: 1.4rem;
        
        &:last-child {
          background: red;
        }
      }
    }
  
    .label {
      height: 100%;
      
      p {
        font-size: 1.3rem;
      }
    }
  
    .yells {
      margin-left: 4rem;
    }
  }
}
