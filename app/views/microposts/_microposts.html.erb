<ul>
  <% microposts.each do |micropost| %>
    <li>
      <div>
        <% if micropost.user.img.present? %>
          <%= image_tag micropost.user.img.url, class: "profile_image_list"  %>
        <% else %>
          <%= image_tag "default_image.png", width: "123px", height: "123px" %>
        <% end %>
        <%= link_to micropost.user.name, user_path(micropost.user) %> | posted_at <%= micropost.created_at %>
      </div>
      <div>
        <p><%= micropost.content %></p>
      </div>
      <div>
        <p>
          <% if current_user == micropost.user %>
            <%= link_to "削除", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </p>
      </div>  
      <div>
        <% if current_user.favorite?(micropost) %>
          <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :favorite_id, micropost.id %>
            <%= f.submit "♥", class: "btn btn-danger" %>
          <% end %>
        <% else %>
          <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
            <%= hidden_field_tag :favorite_id, micropost.id %>
            <%= f.submit "♡", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>