<h1>勉強している人</h1>
<ul>
  <% records.each do |record| %>
  <li>
    <div class="media">
      <a href="#" class="align-self-start mr-3">
        <% if record.user.profile_image.attached? %>
          <%= image_tag record.user.profile_image.variant(resize: "128x123" ) %>
        <% end %>
      </a>
      <%= render "supports/support_button", record: record %>
      <div class="media-body">
        <p>ID: <%= record.id %></p>
        <p>名前: <%= record.user.name %></p>
        <p>性別: <%= record.user.gender %></p>
        <p>年代: <%= record.user.age %>代</p>
        <p>ラベル: <%= record.label %></p>
      </div><!-- /.media-body -->
    </div><!-- /.media -->
  </li>
  <% end %>
</ul>