
<div class="white-block">
  <div class="row">
    <div class="col large-block text-center">
      <h1>勉強している人</h1>
        <div class="scroll">
          <ul>
            <% @records.each do |record| %>
            <li>
              <div class="media">
                <% if record.user.img.present? %>
                  <%= image_tag record.user.img.url, class: "profile_image_list"  %>
                <% else %>
                  <%= image_tag "default_image.png", width: "123px", height: "123px" %>
                <% end %>
                <%= render "supports/support_button", record: record %>
                <div class="media-body">
                  <p>名前: <%= link_to record.user.name, user_path(record.user) %></p>
                  <p>性別: 
                    <%= case record.user.gender 
                        when 1
                          "男性"
                        when 2
                          "女性"
                        else
                          "その他"
                        end %>
                  </p>
                  <p>年代: <%= record.user.age %>代</p>
                  <p>ラベル: <%= record.label %></p>
                  <% unless record.hide_support == true %>
                    <p>エール数: <span class="badge badge-secondary"><%= support_counts(record) %></span></p>
                  <% end %>
                </div>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
    </div>
  </div>
</div>
