<% if logged_in? %>
  <div class="white-block">
    <div class="row">
      <div class="col large-block text-center">
        <%= render "records/index", records: @records %>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-6 hello">
      <h1>みんなと一緒に<br>勉強しましょう！</h1>
      <!--ここを上下中央にしたい-->
    </div>

    <div class="col-md-6 white-block">
      <div class="login-block text-center">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
      
          <div class="form-group">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
      
          <%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
        <% end %>
        <div class="form-group">
          <%= link_to "'sue'としてログイン", login_as_sue_path, method: :post, class: 'btn btn-primary btn-block' %>
          <%= link_to "'taro'としてログイン", login_as_taro_path, method: :post, class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
  </div>
<% end %>