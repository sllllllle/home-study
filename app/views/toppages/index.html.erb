<div class="container">
  <div class="d-flex justify-content-center align-items-center main-block">
    <% if logged_in? %>
      <div class="white-block">
        <div class="row">
          <div class="col lg-block text-center">
            <h3>welcome to homusuta!</h3>
            <p>ログイン中のユーザー: <%= current_user.name %></p>
          </div>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-md-6 hello">
          <h1>みんなと一緒に<br>勉強しましょう！</h1>
          <!--ここを上下中央にしたい-->
        </div>
    
        <div class="col-md-6 white-block">
          <div class="login-block text-center">
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
              <div class="form-group">
                <%= f.label :email, 'メールアドレス' %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
          
              <div class="form-group">
                <%= f.label :password, 'パスワード' %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
          
              <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
              <%= f.submit '簡単ログイン', class: 'btn btn-primary btn-block' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>