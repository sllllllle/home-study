<div class="white-block">
  <div class="row">
    <div class="col lg-block text-center">
      <h1>フォロワー一覧</h1>
      <ul>
        <% @followers.each do |user| %>
          <li>
            <div>
              <%= link_to user.name, user_path(user) %>
              <% if user.img.present? %>
                  <%= image_tag user.img.url, class: "profile_image_list"  %>
                <% else %>
                  <%= image_tag "default_image.png", width: "123px", height: "123px" %>
                <% end %>
              <p>性別: 
                <%= case user.gender 
                    when 1
                      "男"
                    when 2
                      "女"
                    else
                      "その他"
                    end %>
              </p>
              <p>年代: <%= user.age %>代</p>
              <% if current_user.following?(user) %>
                <%= form_with(model: current_user.relationships.find_by(follow_id: user.id), local: true, method: :delete) do |f| %>
                  <%= hidden_field_tag :follow_id, user.id %>
                  <%= f.submit "フォロー解除", class: 'btn btn-danger' %>
                <% end %>
              <% else %>
                <%= form_with(model: current_user.relationships.build, local: true) do |f| %>
                  <%= hidden_field_tag :follow_id, user.id %>
                  <%= f.submit "フォロー", class: 'btn btn-primary' %>
                <% end %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>