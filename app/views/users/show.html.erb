<div class='memo memo-lg'><span class='masking-tape'></span>
  <div class='user-info'>
    <%= render 'user_info', user: @user %>
  </div>
  <div class='card-lists'>
    <ul class='nav nav-tabs nav-justified'>
      <li class='nav-item'><%= link_to 'つぶやき一覧', user_path(@user) %><%= @count_microposts %></li>
      <li class='nav-item'><%= link_to 'いいね一覧', likes_user_path(@user) %><%= @count_favorites %></li>
      <% if current_user == @user %>
        <li class='nav-item'><%= link_to '勉強履歴', records_user_path(@user) %><%= @count_records %></li>
      <% else %>
        <% unless @user.hide_records == true %>
          <li class='nav-item'><%= link_to '勉強履歴', records_user_path(@user) %><%= @count_records %></li>
        <% end %>
      <% end %>
    </ul>
    <div class='microposts scroll'>
      <%= render 'microposts/microposts', microposts: @microposts %>
    </div>
  </div>
</div>